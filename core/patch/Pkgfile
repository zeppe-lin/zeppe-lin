# Description: GNU patch
# URL:         http://www.gnu.org/software/patch/patch.html
# Depends on:  attr

name=patch
version=2.7.6.17-9c98
release=1
source=https://crux.nu/files/distfiles/$name-$version.tar.xz

build() {
	cd $name-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
