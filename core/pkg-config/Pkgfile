# Description: Managing library compile/link flags
# URL:         http://pkgconfig.freedesktop.org/wiki/

name=pkg-config
version=0.29.2
release=1
source=http://pkgconfig.freedesktop.org/releases/$name-$version.tar.gz

build() {
	cd $name-$version

	./configure \
		--prefix=/usr        \
		--disable-host-tool  \
		--with-internal-glib \

	make V=1
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/doc
}
