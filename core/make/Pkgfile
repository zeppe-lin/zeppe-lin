# Description: GNU Make build tool
# URL:         http://www.gnu.org/software/make/

name=make
version=4.3
release=1
source=http://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.lz

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls \

	make V=1
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/info
}
