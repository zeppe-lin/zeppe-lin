# Description: GNU diff utilities
# URL:         http://www.gnu.org/software/diffutils/

name=diffutils
version=3.8
release=1
source="http://ftpmirror.gnu.org/gnu/$name/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls \

	make V=1
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/info
}
