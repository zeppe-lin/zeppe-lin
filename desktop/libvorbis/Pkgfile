# Description: Vorbis codec library
# URL:         https://www.xiph.org/vorbis/
# Depends on:  libogg

name=libvorbis
version=1.3.7
release=1
source=https://downloads.xiph.org/releases/vorbis/$name-$version.tar.xz

build() {
	cd $name-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install

	rm -rf $PKG/usr/share/doc
}
