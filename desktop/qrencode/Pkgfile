# Description: C library for encoding data in a QR Code symbol
# URL:         https://fukuchi.org/works/qrencode
# Depends:     libpng

name=qrencode
version=4.1.1
release=1
source=https://fukuchi.org/works/$name/$name-$version.tar.bz2

build() {
	cd $name-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
