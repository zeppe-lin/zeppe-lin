# Description: Dynamic window manager for X (chinarulezzz's fork)
# URL:         https://dwm.suckless.org/
# Depends on:  xorg-libxft xorg-libxinerama

name=dwm60cf
version=6.0
release=1
source="$name.c $name.1 config.h"

build() {
	export CFLAGS="$CFLAGS -std=c99 -pedantic -Wall -Wextra \
		-Wformat -I/usr/include/freetype2"
	export LDFLAGS="$LDFLAGS -lc -lX11 -lXft -lXinerama"
	export CPPFLAGS="-D_DEFAULT_SOURCE -DVERSION=$version \
		-DXINERAMA -DPWKL -DWINTITLE"

	${CC:-cc} -o $name $CPPFLAGS $CFLAGS $LDFLAGS $name.c

	install -m 0755 -Dt $PKG/usr/bin/ $name
	install -m 0644 -Dt $PKG/usr/share/man/man1/ $name.1
}
