# Description: Modular status bar for dwm
# URL:         file:///usr/src/zeppe-lin/desktop/dwmblocks
# Depends on:  bash libbsd xorg-libx11

name=dwmblocks
version=0.2.1
release=1
source=ABOUT

build() {
	cp -r $PKGMK_ROOT/src .
	cd src

	sed -i  -e 's/CFLAGS = /CFLAGS +=/'   \
		-e 's/LDFLAGS = /LDFLAGS +=/' \
		config.mk

	make VERSION=$version PREFIX=/usr DESTDIR=$PKG install
}
