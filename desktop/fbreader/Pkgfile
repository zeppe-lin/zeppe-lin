# Description: E-book reader (epub, mobi, fb2)
# URL:         http://www.fbreader.org/
# Depends on:  libunibreak qt5

name=fbreader
version=0.99.4
release=2
source="http://www.$name.org/files/desktop/$name-sources-$version.tgz
	$name-$version.patch
	$name-gcc6.patch
	$name-qt5.patch"

build() {
	cd $name-$version

	patch -Np1 -i $SRC/$name-$version.patch
	patch -Np0 -i $SRC/$name-gcc6.patch
	patch -Np1 -i $SRC/$name-qt5.patch

	# Use system FLAGS
	sed -e "s/^CFLAGS = -pipe/CFLAGS +=/"      -i makefiles/arch/desktop.mk
	sed -e "/^	CFLAGS +=/d"               -i makefiles/config.mk
	sed -e "/^	LDFLAGS += -s$/d"          -i makefiles/config.mk
	sed -e "/^LDFLAGS =$/d"                    -i makefiles/arch/desktop.mk
	sed -e 's|which ccache >|which ccache 2>|' -i makefiles/arch/desktop.mk

	export TARGET_ARCH=desktop
	export UI_TYPE=qt4
	export TARGET_STATUS=release
	export CXXFLAGS="$CXXFLAGS -fPIC"

	make V=1
	make DESTDIR=$PKG install

	ln -s FBReader $PKG/usr/bin/fbreader
}
