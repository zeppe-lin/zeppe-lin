# Description: Lightweight universal runtime container
# URL:         https://github.com/opencontainers/runc
# Depends on:  go-md2man libseccomp

name=runc
version=1.1.3
release=1
source=https://github.com/opencontainers/runc/archive/v$version/$name-$version.tar.gz

build() {
	mkdir -p src/github.com/opencontainers
	cd src/github.com/opencontainers

	ln -sf $SRC/$name-$version $name
	cd $name

	export GOPATH=$SRC
	export BUILDTAGS="seccomp"

	# use the long commit hash here
	make COMMIT=6724737f999df9ee0d8ca5c6d7b81f97adc34374
	install -m 755 -D $name $PKG/usr/bin/$name

	# prepare manpages
	make man
	install -m 644 -D -t $PKG/usr/share/man/man8/ man/man8/*.8
}
