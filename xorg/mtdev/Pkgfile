# Description: Kernel multi-touch transformation library
# URL:         https://launchpad.net/mtdev

name=mtdev
version=1.1.6
release=1
source=http://launchpad.net/$name/trunk/$version/+download/$name-$version.tar.gz

build() {
	cd $name-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
