# Description: XCB utilities library
# URL:         https://xcb.freedesktop.org/
# Depends on:  xorg-libxcb

name=xorg-xcb-util
version=0.4.0
release=1
source=https://xcb.freedesktop.org/dist/xcb-util-$version.tar.bz2

build() {
	cd xcb-util-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
