# Description: Print contents of X events
# URL:         http://xorg.freedesktop.org
# Depends on:  xorg-xrandr

name=xorg-xev
version=1.2.5
release=1
source=https://www.x.org/releases/individual/app/xev-$version.tar.xz

build() {
	cd xev-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
