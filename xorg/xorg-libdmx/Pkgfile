# Description: xorg lib libdmx
# URL:         http://xorg.freedesktop.org
# Depends on:  xorg-libxext

name=xorg-libdmx
version=1.1.4
release=1
source=https://www.x.org/releases/individual/lib/libdmx-$version.tar.bz2

build() {
	cd libdmx-$version

	./configure \
		--prefix=/usr    \
		--disable-static \

	make V=1
	make DESTDIR=$PKG install
}
