# Description: Mesa OpenGL Utility library
# URL:         https://www.mesa3d.org/
# Depends on:  mesa

name=glu
version=9.0.2
release=1
source=https://mesa.freedesktop.org/archive/$name/$name-$version.tar.xz

build() {
	cd $name-$version

	./configure \
		--prefix=/usr    \
		--disable-static \

	make V=1
	make DESTDIR=$PKG install
}
