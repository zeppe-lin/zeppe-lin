# Description: X authority file utility
# URL:         http://xorg.freedesktop.org
# Depends on:  xorg-server

name=xorg-xauth
version=1.1.2
release=1
source=https://www.x.org/releases/individual/app/xauth-$version.tar.xz

build() {
	cd xauth-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install
}
