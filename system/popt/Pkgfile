# Description: Commandline option parser
# URL:         https://github.com/rpm-software-management/popt

name=popt
version=1.18
release=1
source=http://ftp.rpm.org/popt/releases/popt-1.x/$name-$version.tar.gz

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls \

	make V=1
	make DESTDIR=$PKG install
}
