# Description: SysTem call tracing utility (like trace, truss, etc)
# URL:         https://strace.io
# Depends on:  elfutils

name=strace
version=5.18
release=1
source=https://github.com/$name/$name/releases/download/v$version/$name-$version.tar.xz

build() {
	cd $name-$version

	./configure --prefix=/usr --disable-mpers

	make V=1
	make DESTDIR=$PKG install
}
