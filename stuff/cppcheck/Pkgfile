# Description: Static analysis tool for C/C++ code
# URL:         http://cppcheck.sourceforge.net/
# Depends on:  libpcre

name=cppcheck
version=2.8
release=1
source=https://github.com/danmar/$name/archive/$version/$name-$version.tar.gz

build() {
	cd $name-$version

	sed -i -e 's,python,python3,' htmlreport/cppcheck-htmlreport

	make install DESTDIR=$PKG \
		HAVE_RULES=yes MATCHCOMPILER=yes FILESDIR=/usr/share/cppcheck

	# htmlreport depends on python stuff (pygments) but has no benefit
	rm -rf $PKG/usr/bin/cppcheck-htmlreport

	# man pages requires dockbook-{xml,xsl}, skip that shit.
	#make man DB2MAN=/usr/share/xml/docbook/xsl-stylesheets/manpages/docbook.xsl
	#install -m 0644 -D $name.1 $PKG/usr/share/man/man1/$name.1
}
